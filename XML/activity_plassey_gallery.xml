<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/history"
    android:orientation="vertical"
    tools:context=".plassey_gallery">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="গ্যালারি"
        android:fontFamily="@font/fazlay"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:padding="10dp"/>

    <com.denzcoskun.imageslider.ImageSlider
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:placeholder="@drawable/no_internet"
        app:error_image="@drawable/no_internet"
        app:auto_cycle="true"
        app:delay="0"
        android:id="@+id/slider2"
        app:period="1500"
        app:corner_radius="5"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="বাংলার শেষ স্বাধীন নবাব সিরাজউদ্দৌলার ও ফরাসি মিত্রদের সাথে ব্রিটিশ ইস্ট ইন্ডিয়া কোম্পানির পলাশী নামক স্থানে যে যুদ্ধ সংঘটিত হয়েছিল তাই পলাশীর যুদ্ধ নামে পরিচিত। ১৭৫৭ সালের জুন ২৩ তারিখে এই যুদ্ধ সংঘটিত হয়েছিল। সেই যুদ্ধের কিছু ছবি এখানে উপস্থাপন করা হলো"
        android:textSize="20sp"
        android:padding="10dp"
        android:fontFamily="@font/rajon" />
</LinearLayout>